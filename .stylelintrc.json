{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recommended-vue/scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "scss/at-rule-no-unknown": null
  }
}
